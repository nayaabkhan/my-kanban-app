{
  "name": "my-kanban-app",
  "version": "0.0.1",
  "description": "Personal Kanban App",
  "main": "dist/app/electron/main.loader.js",
  "scripts": {
    "watch-renderer": "imba -w app/server.imba",
    "build-renderer": "imba build app/server.imba",
    "watch-electron": "imba build -wM --no-hashing app/electron/main.imba",
    "build-electron": "imba build -m --no-hashing app/electron/main.imba",
    "electron": "wait-on tcp:3000 && electron .",
    "dev": "concurrently -k npm:watch-renderer npm:watch-electron npm:electron"
  },
  "author": "Nayaab Khan <nayaab@hey.com>",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.2",
    "express": "^4.17.1",
    "imba": "^2.0.0-alpha.190"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "electron": "^16.0.2",
    "wait-on": "^6.0.0"
  }
}
